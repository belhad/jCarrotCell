-var addMin = (dev == true) ? "" : ".min"

mixin demoItem(index)
    div.demo__item
        figcaption= index
        figure 
            -var z = index
            while (z--)
                .cc-carrot
            if index == 0
                .cc-carrot.zero-carrot
            //- figcaption= index

